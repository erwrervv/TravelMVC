@model IEnumerable<Travel.Admin.Models.ArticleOverview>

<div class="container-fluid mt-50">
    <div class="row">
        <!-- 左側導航欄 -->
        <div class="col-md-3">
            <h5>篩選條件</h5>
            <div class="list-group">
                <label class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" value=""> 品牌A
                </label>
                <label class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" value=""> 品牌B
                </label>
                <label class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" value=""> 品牌C
                </label>
                <label class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" value=""> 品牌D
                </label>
            </div>
        </div>
        <!-- 右側內容區域 -->
        <div class="col-md-9">
            <!-- 分頁 -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">上一頁</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">下一頁</a>
                    </li>
                </ul>
            </nav>
            <!-- 另一個圖片區塊 -->
            <div class="row">
                @foreach (var a in Model)
                {
                    <div class="col-md-3 mb-4">
                        <a href="${}" class="text-decoration-none">
                            <div class="card">
                                <h5 class="card-title">
                                    @(a.ArticleName.Length > 10 ? a.ArticleName.Substring(0, 10) : a.ArticleName)
                                </h5>
                                    <h6 class="card-subtitle mb-2 text-muted">@a.Memberunique.MemberName</h6>
                                    <partial name="_PicturePartial" model="a" />
                                <div class="card-body">
                                    <div class="card-text">@(a.UpdateTime.ToString().Substring(0, a.UpdateTime.ToString().Length))</div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>




