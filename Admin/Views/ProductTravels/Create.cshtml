@model Travel.Admin.Models.ProductTravel

@{
    ViewData["Title"] = "Create";
}

<h1>旅行列表管理</h1>

<h4 style="color:blue">新增</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AllDays" class="control-label">旅行天數</label>
                <input asp-for="AllDays" type="number" class="form-control" min="1" max="3"  />
                <span asp-validation-for="AllDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelName" class="control-label">旅行名稱</label>
                <input asp-for="TravelName" class="form-control" />
                <span asp-validation-for="TravelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelareaId" class="control-label"></label>
                <select asp-for="TravelareaId" class ="form-control" asp-items="ViewBag.TravelareaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TravelDatetime" class="control-label">旅行日期</label>
                <input asp-for="TravelDatetime" class="form-control" />
                <span asp-validation-for="TravelDatetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelIntroduction" class="control-label">旅行介紹</label>
                <input asp-for="TravelIntroduction" class="form-control" />
                <span asp-validation-for="TravelIntroduction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelMeetingpoint" class="control-label">旅行集合地點</label>
                <input asp-for="TravelMeetingpoint" class="form-control" />
                <span asp-validation-for="TravelMeetingpoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductShow" class="control-label">產品展示</label>
                <input asp-for="ProductShow" class="form-control"  disabled/>
                <span asp-validation-for="ProductShow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">價格:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
