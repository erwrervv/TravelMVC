@model Travel.Admin.Models.Comment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>評論</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommentId" />
            <div class="form-group">
                <label asp-for="Article.ArticleName" class="control-label"></label>
                <select asp-for="Article.ArticleName" class="form-control" asp-items="ViewBag.ArticleId"></select>
                <span asp-validation-for="Article.ArticleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memberunique.MemberName" class="control-label"></label>
                <select asp-for="Memberunique.MemberName" class="form-control" asp-items="ViewBag.MemberuniqueId"></select>
                <span asp-validation-for="Memberunique.MemberName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommentContent" class="control-label"></label>
                <input asp-for="CommentContent" class="form-control" />
                <span asp-validation-for="CommentContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommentDateTime" class="control-label" hidden></label>
                <input asp-for="CommentDateTime" class="form-control" hidden />
                <span asp-validation-for="CommentDateTime" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
