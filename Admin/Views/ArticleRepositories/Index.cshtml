@model IEnumerable<Travel.Admin.Models.ArticleRepository>

@{
    ViewData["Title"] = "Index";
}

<h1>自訂列表文章</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新增</a>
</p>
<table class="table table-hover">
    <thead class="table-secondary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleList.ArticleListName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article.ArticleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleList.ArticleListName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Article.ArticleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArticleRepositoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ArticleRepositoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ArticleRepositoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Styles {
    <link href="https://cdn.datatables.net/v/dt/dt-2.1.3/datatables.min.css" rel="stylesheet">
}

@section Scripts {
    <script src="https://cdn.datatables.net/v/dt/dt-2.1.3/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            //alert("ready");
            $("table").dataTable({
                // ajax: {
                //     type: "GET",
                //     url: "/ArticleOverviews/IndexJson",
                //     dataSrc: function (json) {
                //         return json;
                //     },
                // },

                columns: [
                    { "data": "ArticleListName", "width": "50px" },
                    { "data": "ArticleName", "width": "50px" },
                    { "data": "", "width": "10px" },
                ],
                fixedHeader: { header: false },
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/2.1.2/i18n/zh-HANT.json',
                },
            });
        });
    </script>

}